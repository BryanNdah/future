<div class="row">
	<div class="col 12">
		<h1 class="center-align" class="sign-up-form">Customers Profile</h1>
	</div>
</div>

<div class="row">
	<% @users.each do |user| %>
	<div class="col s6 m6">
	  <div class="card blue-grey darken-1">
	    <div class="card-content white-text">
	      <span class="card-title">Name: <%= user.name %></span>
	      <p>Email: <%= user.email %></p>
	      <p>Phone Number: <%= user.phonenumber %></p>
	      <p>Description: <%= user.description %></p>
	    </div>
	    <div class="card-action">
	      <a href="#">View Complete Profile</a>
	    </div>
	  </div>
	</div>
	<% end %>
</div>