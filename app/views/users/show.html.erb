<div class="row">
	<div class="col 12">
		<h1 class="center-align" class="sign-up-form"></h1>
	</div>
</div>

<div class="row">
	<div class="col s6 m6">
	  <div class="card blue-grey darken-1">
	    <div class="card-content white-text">
	      <span class="card-title">Name: <%= @user.name %></span>
	      <p>Email: <%= @user.email %></p>
	      <p>Phone Number: <%= @user.phonenumber %></p>
	      <p>Description: <%= @user.description %></p>
	    </div>
	  </div>
	  <%= link_to '<i class="material-icons right">create</i>Edit your profile'.html_safe, edit_user_path(@user), class: "waves-effect waves-light btn" %>
	</div>
</div>